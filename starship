format = """
[](#98182E)\
$username\
[](bg:#B82020 fg:#98182E)\
$directory\
[](fg:#B82020 bg:#F52E00)\
$git_branch\
$git_status\
[](fg:#F52E00 bg:#FF6003)\
$c\
$elixir\
$elm\
$golang\
$haskell\
$java\
$julia\
$nodejs\
$nim\
$rust\
[](fg:#FF6003 bg:#FE7701)\
$docker_context\
[](fg:#FE7701 bg:#FFAB26)\
$time\
[ ](fg:#FFAB26)\
"""

# Disable the blank line at the start of the prompt
# add_newline = false

# You can also replace your username with a neat symbol like  to save some space
[username]
show_always = true
style_user = "bg:#98182E"
style_root = "bg:#9A348E"
format = '[$user ]($style)'

[directory]
style = "bg:#B82020"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

# Here is how you can shorten some long paths by text replacement
# similar to mapped_locations in Oh My Posh:
[directory.substitutions]
"Documents" = " "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
# Keep in mind that the order matters. For example:
# "Important Documents" = "  "
# will not be replaced, because "Documents" was already substituted before.
# So either put "Important Documents" before "Documents" or use the substituted version:
# "Important  " = "  "

[c]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[docker_context]
symbol = " "
style = "bg:#FE7701"
format = '[ $symbol $context ]($style) $path'

[elixir]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[elm]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[git_branch]
symbol = ""
style = "bg:#F52E00"
format = '[ $symbol $branch ]($style)'

[git_status]
style = "bg:#F52E00"
format = '[$all_status$ahead_behind ]($style)'

[golang]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[haskell]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[java]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[julia]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[nodejs]
symbol = ""
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[nim]
symbol = " "
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[rust]
symbol = ""
style = "bg:#FF6003"
format = '[ $symbol ($version) ]($style)'

[time]
disabled = false
time_format = "%R" # Hour:Minute Format
style = "bg:#FFAB26"
format = '[ $time ]($style)'
